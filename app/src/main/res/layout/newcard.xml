<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="false"
    android:tag="cards main container">

            <android.support.v7.widget.CardView
                android:clickable="false"
                android:id="@+id/cardfull"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/li1"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:clickable="true"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/li2"
                        android:layout_width="190dp"
                        android:layout_height="59dp"
                        android:clickable="true"
                        android:layout_gravity="top|start"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/siteTextview"
                            android:layout_width="match_parent"
                            android:clickable="true"
                            android:layout_height="25dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="start"
                            android:text="Souq"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:layout_marginLeft="10dp" />

                        <TextView
                            android:id="@+id/mobilename"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:clickable="true"
                            android:layout_marginStart="10dp"
                            android:text="Apple iPhone"
                            android:layout_marginLeft="10dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/li3"
                        android:clickable="true"
                        android:layout_width="190dp"
                        android:layout_height="75dp"
                        android:layout_gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageview"
                            android:layout_width="164dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:src="@drawable/souq" />

                    </LinearLayout>
                </LinearLayout>



                <RelativeLayout
                    android:id="@+id/reltv"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:clickable="false"
                    android:layout_marginTop="75dp"
                    android:background="@color/colorWhite"
                    >


                    <LinearLayout
                        android:id="@+id/li121"
                        android:layout_width="144dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="20dp"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/crncytext"
                            android:layout_width="45dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:text="AED"
                            android:textColor="@color/purple"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pricetext"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"

                            android:layout_marginTop="5dp"

                            android:clickable="true"
                            android:text="price"
                            android:textColor="@color/purple"
                            android:textSize="20dp"
                            android:textStyle="bold" />



                    </LinearLayout>

                    <TextView
                        android:layout_width="135dp"
                        android:layout_below="@+id/li121"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        android:maxLines="1"
                        android:text="Shipping costs varies" />

                    <LinearLayout
                        android:id="@+id/linrtextmore"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/li121"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/texviewtmore"
                            android:layout_width="95dp"
                            android:layout_height="25dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="MoreInfo"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15dp" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/buttonsite1"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="5"
                        android:background="@color/purple"
                        android:text="Go to site"
                        android:clickable="false"
                        android:textColor="#fff"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="25dp" />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/expandable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#FFF"
                    android:visibility="gone"
                    android:layout_marginTop="155dp"

                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lidelvry"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Delivery"
                            android:id="@+id/textdlvry"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:gravity="start|center_vertical"
                            android:text="within 4-13 working days"
                            android:layout_marginLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Warranty"
                            android:id="@+id/textwrnty"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:gravity="start|center_vertical"
                            android:text="1 year since date of purchase"
                            android:layout_marginLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Shipping"
                            android:id="@+id/textship"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:text="Same Day in India/Noida for Orders before 6:30pm"
                            android:layout_marginLeft="10dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <TextView
                            android:text="Notes"
                            android:id="@+id/textnotes"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"

                            android:text="+2.5% fee for payment by creadit card, No Extra charge on COD, Prices includeVAT"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linrless"
                        android:orientation="vertical"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="280dp"
                        android:layout_marginLeft="280dp">
                        <TextView
                            android:text="LessInfo"
                            android:textColor="@color/colorPrimaryDark"
                            android:id="@+id/lesstext"
                            android:layout_width="70dp"
                            android:layout_height="28dp" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
